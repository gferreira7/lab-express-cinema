

<div id="movie-details-page" class='container p-5 mb-4 bg-light rounded-3'>
  <img src={{this.image}} alt='' />

  <div class='container-fluid py-5'>
    <h1 class='display-5 fw-bold'>{{this.title}}</h1>
    <p class='col-md-8 fs-4'>By: {{this.director}}</p>
    <p class='col-md-8 fs-4'>Cast:</p>
    <ul>
      {{#each stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <a class='btn btn-primary btn-lg' type='button' href='/movies'>Go back</a>
  </div>
</div>